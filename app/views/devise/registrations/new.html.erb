<div class ='row'>
 <div class ='col-6 offset-3'>
 <h1><%= t('devise.sign_up.sign') %></h1>

 <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: {turbo: false}) do |f| %>
  <%= bootstrap_devise_error_messages! %>
  <% resource.errors.full_messages.each do |msg| %>
    <div><%= msg %></div>
  <% end %>
  <div class="form-group">
    <%= f.label t('devise.sign_up.email') %>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label t('devise.sign_up.password') %>
    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>

    <% if @minimum_password_length %>
      <small class="form-text text-muted"><%= t('devise.sign_up.minimum_password_length', count: @minimum_password_length) %></small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label t('devise.sign_up.password_confirm') %>
    <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit t('devise.sign_up.sign'), class: 'btn btn-primary' %>
  </div>
 <% end %>

